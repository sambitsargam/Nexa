{
  "name": "nexa",
  "version": "0.1.0",
  "description": "Dual-mode ZPIE privacy analytics engine for Zcash using CoFHE, nilDB, and nilAI",
  "main": "backend/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "node --watch backend/index.js",
    "frontend:dev": "cd frontend && vite",
    "build": "cd frontend && vite build",
    "test": "node --test tests/**/*.test.js",
    "test:watch": "node --test-reporter=tap tests/**/*.test.js --watch",
    "lint": "eslint backend tests",
    "format": "prettier --write ."
  },
  "keywords": [
    "zcash",
    "privacy",
    "analytics",
    "fhe",
    "homomorphic-encryption",
    "nildb",
    "nilai",
    "cofhe"
  ],
  "author": "Sambit Sargam Ekalabya",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.7",
    "express": "^4.21.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "pino": "^9.4.0",
    "pino-pretty": "^13.0.0",
    "@nillion/secretvaults": "^0.1.7",
    "@nillion/nuc": "^0.1.0",
    "@nillion/nilai-ts": "^0.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.1.0",
    "eslint": "^9.17.0",
    "prettier": "^3.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.12.7",
    "tailwindcss": "^3.4.1",
    "vite": "^5.4.3"
  }
}
