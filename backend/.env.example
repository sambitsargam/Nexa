// backend/.env.example
# 3xpl API Configuration
THREEPL_API_BASE=https://sandbox-api.3xpl.com
THREEPL_API_RATE_LIMIT=100

# CoFHE (Fhenix) Configuration
# NOTE: CoFHE operations are performed via smart contracts and the Cofhe SDK.
# The official example uses the SDK in the browser with a wallet signer.
# For server-side dev/testing you can provide a private key and RPC URL
# to let the backend create a signer (DEV ONLY). In production, prefer
# frontend encryption with Cofhejs and smart contracts.
COFHE_PRIVATE_KEY=your_dev_private_key_for_cofhe_connect
COFHE_RPC_URL=https://sepolia.gateway.tenderly.co
COFHE_SUPPORTED_CHAIN=sepolia

# nilDB & SecretVaults Configuration (Nillion)
NILDB_API_KEY=your_nillion_api_key_from_nilpay
NILCHAIN_URL=http://rpc.testnet.nilchain-rpc-proxy.nilogy.xyz
NILAUTH_URL=https://nilauth.sandbox.app-cluster.sandbox.nilogy.xyz
NILDB_NODES=https://nildb-stg-n1.nillion.network,https://nildb-stg-n2.nillion.network,https://nildb-stg-n3.nillion.network
NILLION_COLLECTION_ID=collection_id

# nilAI Configuration (Nillion LLM)
NILAI_API_KEY=your_nilai_api_key_from_nilpay
NILAI_API_BASE=https://nilai-a779.nillion.network/v1

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# Demo/Dev Mode
DEV_MODE=true
ENABLE_DEMO_DECRYPT=true
